<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_shopping_list_tree" model="ir.ui.view">
        <field name="name">shopping.list.tree</field>
        <field name="model">shopping.list</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name='name'/>
                <field name="user_id"/>
                <field name="total_items"/>
            </tree>
        </field>
    </record>

    <record id="view_shopping_list_form" model="ir.ui.view">
        <field name="name">shopping.list.form</field>
        <field name="model">shopping.list</field>
        <field name="arch" type="xml">
            <form string="Shopping List" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="total_items"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="list_line" string="Products">
                            <field name="line_ids" editable="bottom">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_shopping_list_search" model="ir.ui.view">
        <field name="model">shopping.list</field>
        <field name="arch" type="xml">
            <search string="Search Shopping List">
                <field name="name"/>
                <filter name="user_id" string="User" context="{'group_by':'user_id'}" />
            </search>
        </field>
    </record>

    <record id="action_orders_shopping_list" model="ir.actions.act_window">
        <field name="name">Shopping List</field>
        <field name="res_model">shopping.list</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_shopping_list_search"/>
        <field name="context">{'search_default_user_id': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder"></p>
        </field>
    </record>

    <record id="ak_shopping_list_quick_order_action_view_shopping_list_tree" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_shopping_list_tree"/>
        <field name="act_window_id" ref="action_orders_shopping_list"/>
    </record>

    <record id="ak_shopping_list_quick_order_action_view_shopping_list_form" model="ir.actions.act_window.view">
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_shopping_list_form"/>
        <field name="act_window_id" ref="action_orders_shopping_list"/>
    </record>

    <!-- Menu shopping list -->
    <menuitem id="menu_orders_shopping_list" name="Shopping List" action="action_orders_shopping_list" parent="website_sale.menu_orders" sequence="1" />
</odoo>
